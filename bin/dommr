#!/usr/bin/env node

var cli = require('cli'),
    exec = require('child_process').exec,
    path = require('path');

var commands = {

   create: function(args, options) {

      console.log("Creating" , args[0]);

      var target_path = path.resolve(process.cwd(), args[0]),
          source_path = __dirname + '/template-project/*';

      exec('cp -r ' + source_path + ' ' + target_path, function(err, stdout, stderr) {
         console.log(stdout);
         console.log(stderr);
         console.log(err);
      });

   },

   start: function(args, options) {

      console.log("Starting" , args[0]);   

      require('./server.js').start(path.resolve(process.cwd(), args[0]), options.port);
   }

};

cli.parse({
   port: ['p', 'Set the port to bind the webserver to', 'number', 8080],
}, [
   'create',
   'start'
]);


cli.main(commands[cli.command]);
